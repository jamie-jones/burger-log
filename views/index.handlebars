<main class="container">
    <div class="row">
        <section class="col-sm-12">
            <img src="../assets/image/fish-burger.png" alt="Fish Burger" style="width:25%;height:auto;">
        </section>
    </div>
    <h1>Fishin' For A Burger</h1>
    <div class=" row">
        <section class="col-sm-5">
            <h3>Burgers Caught</h3>
            <ul>
                {{#each burgers}}
                {{#unless devoured}}
                {{> burgers/burger-block devoured=true}}
                {{/unless}}
                {{/each}}
            </ul>
        </section>
        <section class="col-sm-2"></section>
        <section class="col-sm-5">
            <h3>Burgers Eaten</h3>
            <ul>
                {{#each burgers}}
                {{#if devoured}}
                {{> burgers/burger-block devoured=false}}
                {{/if}}
                {{/each}}
            </ul>
        </section>
    </div>
    <h3>Catch your Burger here</h3>
    <form class="create-form">
        <div class="form-group">
            <label for="ca">Burger Name:</label>
            <input type="text" id="ca" name="name">
        </div>
        <button type='submit'>Submit!</button>
    </form>
</main>