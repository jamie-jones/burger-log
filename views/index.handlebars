<h1>It's Burger Time!!</h1>

<main class="container">
    <div class="row">
        <section class="col-sm-12">
            <img src="../assets/fish-burger.jpg" alt="Fish Burger">
        </section>
    </div>

    <div class="row">
        <section class="col-sm-5">
            <h2>Eat The Burger!</h2>
            <ul>
                {{#each burgers}}
                {{#unless devoured}}
                <ol>
                    {{> burgers/burger-block devoured=true}}
                </ol>
                {{/unless}}
                {{/each}}
            </ul>
        </section>
        <section class="col-sm-2"></section>
        <section class="col-sm-5">
            <h2>Burgers Devoured</h2>
            <ul>
                {{#each burgers}}
                {{#if devoured}}
                <ol>
                    {{> burgers/burger-block devoured=false}}
                </ol>
                {{/if}}
                {{/each}}
            </ul>
        </section>
    </div>
    <h2>Order a burger!</h2>
    <form class="create-form">
        <div class="form-group">
            <label for="ca">Burger Name:</label>
            <input type="text" id="ca" name="name">
        </div>
        <button type='submit'>Submit!</button>
    </form>
</main>